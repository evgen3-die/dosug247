			max-height: 582px

.pseudo-dropdown_checkbox
	position: relative
	&-valid
		position: relative
		border-color: $color18
		&:after
			content: ''
			position: absolute
			width: 20px
			height: 20px
			background-image: url(../img/icons/valid.png)
			top: 4px
			left: 100%
			margin-left: 6px
			background-repeat: no-repeat
			+below($media-size1)
				display: none
	&-errors
		border-color $color17
		.pseudo-dropdown_checkbox
			&__errors
				margin 0
				padding: 5px 12px
				position: absolute
				left: 100%
				top: 8px
				background-color: $color17
				margin-left: 10px
				z-index: 10
				+below($media-size1)
					display: none
				&:before
					content ""
					position: absolute
					border: 5px solid transparent
					border-right: 5px solid $color17
					top: 50%
					margin-top: -5px;
					right: 100%
				li
					padding 0
					margin 0
					list-style none
					background none
					font-family $form-base-font-family
					font-size 13px
					color $color6
					white-space: nowrap


