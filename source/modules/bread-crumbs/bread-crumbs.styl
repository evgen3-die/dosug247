.bread-crumbs
	//padding-top: 12px
	padding-top: 6px
	//margin-bottom: 16px
	margin-bottom: 6px
	margin-top: 0
	line-height normal
	& + .page-title
		//margin-bottom: 19px
		margin-bottom: 9px
	& + .button
		//margin-bottom: 16px
		margin-bottom: 8px
		& + .page-title
			//margin-bottom: 19px
			margin-bottom: 9px
	ul-reset()

	&__item
	&__separator
		display inline-block

	&__item
		list-style none
		padding 0
		font-size 14px
		color $color14

	&__link
		&
		&:visited
			color #505050

		&:hover
			color $color14
			text-decoration underline

	&__separator
		color #535353
		svg
			size 5px 10px
			fill #505050
