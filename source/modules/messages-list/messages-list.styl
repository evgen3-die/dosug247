.messages-list
	&__item
		display: block
		padding: 15px 20px
		font-size: 14px
		background-color: $color6
		border: 2px solid $color6
		transition .3s
		&:hover
			background-color: #fffbf5
			border-color: #f6e5c7

		&
		&:visited
		&:hover
			color: $color10
			text-decoration: none
		& + &
			margin-top: 1px
		+below($media-size5)
			padding: 10px
		&_new
			background-color: $color16
			border-color: rgba(247, 144, 29, .50)
			&:hover
				background-color: #fffbf5
				border-color: #f6e5c7
		&__image
			float: left
			+below($media-size5)
				float: none
				text-align: center
				display: none
			img
				border-radius 50%
		&__date
			font-size: 12px
			color: $color15
			float: right
			margin-top: 5px
		&__name
			font-size: 16px
			color: $color3
		&__content
			margin-left: 100px
			+below($media-size5)
				margin-left: 0
		&__text
			&_not-view
				background-color: $color2
				padding: 8px 13px;
			line-height: 1.3
			margin-top: 7px
