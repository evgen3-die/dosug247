.hide-mobile
	+below($media-size3)
		display: none

.main

	float: left
	width: calc(100% - 450px)
	position: relative

	+below($media-size1)
		width: calc(100% - 225px)
	+below($media-size3)
		width: 100%

	&_one-sidebar
		width: calc(100% - 225px)
		+below($media-size1)
			width: 100%

	&__content
		font-size: 15px
		margin-top: 25px
		line-height: 1.6
		color: $color10
		p
		hr
			margin 25px 0
		b
			color: $color9
		img
			max-width: 100%

	&__after-text
		margin-top: 50px
		padding-top: 25px
		border-top: 1px solid $color12

		&__title
			margin-bottom: 7px

		&__text
			color: $color13

	&__banner
		display: block
		margin 20px 0
		img
			display: block
			width: 100%

