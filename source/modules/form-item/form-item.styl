//- Helpers
form-focus-style($color)
	box-shadow 0 0 2px rgba($color,.75)
	// box-shadow inset 0 0 0 1px $color
	{block}

//- Base styles
.form-item
	display block
	line-height normal
	position: relative

	// m-cf()
	// padding-bottom 10px
	&__label
		display block
		padding-bottom 4px
		font-family $form-base-font-family
		span
			color $form-input-error-color

	&__input
		input
		textarea
		select
			box-sizing border-box
			width 100%
			font-family $form-base-font-family
			padding 0 9px


		textarea
			height 100px
			min-height 100px
			padding 9px
			resize vertical
			line-height normal !important


	&__helpers
		font-family $form-base-font-family
		+below($media-size1)
			overflow: hidden
			clear: both

	&__errors
		margin 0
		padding: 5px 12px
		position: absolute
		left: 100%
		top: 1px
		background-color: $color17
		margin-left: 10px
		z-index: 10
		+below($media-size1)
			position: static
			margin-left: 0
			padding-top: 2px
			padding-bottom: 2px
			margin-top: 3px
			display: none
		&:before
			content ""
			position: absolute
			border: 5px solid transparent
			border-right: 5px solid $color17
			top: 50%
			margin-top: -5px;
			right: 100%
			+below($media-size1)
				display: none
		li
			padding 0
			margin 0
			list-style none
			background none
			font-family $form-base-font-family
			font-size 13px
			color $color6
			white-space: nowrap


	&__hint
		font-size $form-input-hint-font-size
		color $form-input-hint-font-color

	&_type_captcha
		m-cf()
		display: inline-block

	&_type_captcha &__input-image
		float left
		margin-right 35px

	&_type_captcha &__input
		width 105px
		float left

	&_type_radio
	&_type_checkbox
		padding-left 30px
		position relative
		hover-opacity()

	&_type_checkbox &__label
	&_type_radio &__label
	&_type_checkbox &__input
	&_type_radio &__input
		cursor pointer
		display inline-block

	&_type_radio &__label
	&_type_checkbox &__label
		display inline
		padding 0
		padding-bottom 0 !important
		user-select-none()

	&_type_radio &__input
	&_type_checkbox &__input
		position absolute
		left 0
		top 3px

	&_type_multiselect select
		height auto

	&_type_password input
		font-family arial

//- Default style
textarea
form button
	&:focus
		outline none
		form-focus-style($form-input-focus-color)
.form-item_style_default
	// padding-bottom 17px
	.form-item
		&__label

			padding-bottom 9px
			vertical-align: middle

		&__input
			font-size: 0
			input
			select
			textarea
				font-family $form-base-font-family
				background-color: $color4
				border1()
				color #333
				// font-size 18px
				font-size 13px
				padding 5px 18px
				min-height: 29px
				&:invalid
					border-color $form-input-error-color

				&:invalid:focus
					border-color $form-input-error-color
					form-focus-style($form-input-error-color)

				+placeholder()
					color #d3d3d3
					font-style: italic
					// font-size 12px
				&:focus
					outline none
					form-focus-style($form-input-focus-color)

			textarea
				padding 8px 18px
				height 132px
				min-height 132px
				line-height $base-line-height

	&.form-item_type_multiselect
		select
			padding 0 !important
			min-height 40px
			height auto

		option
			padding 0.5em 1em

	&.form-item_status_error .form-item__input
		input
		textarea
		select
		.jq-selectbox__select
			border-color $color17
			&:focus
				form-focus-style($color17)
		.jq-selectbox__trigger-arrow
			border-top-color: $color17

	&.form-item_valid .form-item__input
		position: relative
		&:after
			content: ''
			position: absolute
			width: 20px
			height: 20px
			background-image: url(../img/icons/valid.png)
			top: 4px
			left: 100%
			margin-left: 5px
			background-repeat: no-repeat
			display: none
		input
		select
		textarea
			border-color: $color18

	&.form-item_small
		max-width: 82px

	&.form-item_register-data
		.jq-file
			&__name
				padding: 10px 5px
				color:  #93816c
				padding-top: 38px
				font-size: 14px
			&__browse
				background-image: none
				background-color: #f5d6b4
				border-radius 4px
				color: #2d2822
				font-size: 16px
				padding: 4px 10px
				top: 0
