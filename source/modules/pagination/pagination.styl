.pagination
	// m-cf()
	text-align left
	line-height: 1
	margin: 21px 0px;
	&_center
		text-align: center
	+below($media-size5)
		text-align: center
	+ul-reset()
		display inline-block
		font-size 0

	&__item
		list-style none
		padding 0
		display inline-block
		vertical-align middle
		font-size 16px
		font-weight 300
		text-align: center

	&__link
		&
		&:visited
			color $color7
			padding 3px
			size 22px
			display block
			line-height 1

		&:hover
			color #9d9d9d
			text-decoration none

	&__arrow
		display inline-block
		line-height 1
		vertical-align middle
		text-align center
		transition 125ms all ease-in-out
		&:hover
			background-color #d2d2d2
			svg
				fill #fff
		svg
			fill #d2d2d2
			svgSize($chevron-right)
	&__item_active
		background: $color3
		border-radius: 2px
	&__item_active &__link
		&
		&:visited
			color white
			text-decoration: none
