.advanced-search
	&__left
		margin-right: 375px
		+below($media-size3)
			margin-right: 0
			margin-top: 30px
	&__right
		float: right
		width: 350px
		+below($media-size3)
			float: none
			width: auto

	&__bottom
		text-align: center
		hr.line2
			border-color: rgba($color13, .2)
	&__col
		width: 50%
		float: left
		+below($media-size5)
			width: auto
			float: none
	&__input-item
		margin: 10px 0
		&__left
			float: left
			width: 120px
			margin-top: 4px
		&__right
			margin-left: 120px
			&__item
				display: inline-block
				+below($media-size6)
					display: block
				& + &
					margin-left: 12px
					+below($media-size6)
						margin-left: 0
						margin-top: 5px
				&__text
					display: inline-block
					+below($media-size6)
						width: 25px
				.form-item_type_text
					display: inline-block
					width: 70px
					margin-left: 12px
			.form-item_type_select
				width: 215px
				+below($media-size6)
					width: auto
	.sidebar-left__title
		margin-bottom: 10px
		margin-top: 0
		+below($media-size5)
			margin-top: 30px
	* + .sidebar-left__title
		margin-top: 30px
	.sidebar-left__header
		margin-bottom: 20px
	* + .sidebar-left__header
		margin-top: 30px
